{
    "root": true,
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:vue/vue3-essential"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue",
        "html"
    ],
    "rules": {
        "comma-dangle": [2, "never"],
        "no-underscore-dangle": 0,
        "no-param-reassign": 0,
        "func-names": 0
    }
}
